<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.yunhang.forum.controller.auth.PostListController">
    <top>
        <HBox alignment="CENTER_RIGHT" style="-fx-padding: 10;">
            <Label text="排序:"/>
            <ComboBox fx:id="sortComboBox" prefWidth="110.0"/>

            <Button fx:id="refreshButton" mnemonicParsing="false" text="刷新" onAction="#refreshPosts"
                    styleClass="button">
                <HBox.margin>
                    <Insets right="10.0"/>
                </HBox.margin>
            </Button>
        </HBox>
    </top>

    <center>
        <ScrollPane fitToWidth="true">
            <VBox spacing="0.0">
                <ListView fx:id="postListView"/>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
